<% content_for :title, "Courses" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="courses" class="min-w-full flex flex-wrap justify-center gap-14 pb-6">
    <% if @courses.any? %>
      <% @courses.each do |course| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render course %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No courses found.</p>
    <% end %>
  </div>
</div>
